<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <title>用户列表</title>
  <link rel="stylesheet" href="../public/css/amazeui.min.css"/>
  <link rel="stylesheet" href="../public/css/admin.css">
</head>
<body>
<%- include("../header.ejs") %>
<div class="am-cf admin-main" id="app">
  <!-- sidebar start -->
  <%- include("../left.ejs") %>
  <!-- sidebar end -->

  <!-- content start -->
  <div class="admin-content">

    <div class="am-cf am-padding">
      <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">{{title}}</strong></div>
    </div>

    <div class="am-g">
      <div class="am-u-md-3 am-cf">
        <div class="am-fl">
          <!-- <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
                <span class="am-input-group-btn">
                  <button class="am-btn am-btn-default" type="button">搜索</button>
                </span>
          </div> -->
        </div>
      </div>
      <div class="am-u-md-6 am-cf">
        <div class="am-fr am-cf">
          <div class="am-btn-toolbar am-fr">
            <div class="am-btn-group am-btn-group-xs">
              <button type="button" class="am-btn am-btn-default am-fr" v-on:click="adduser" style="margin-right:65px;"><span class="am-icon-plus"></span> 新增</button>
              <!-- <button type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button> -->
            </div>
          </div>
        </div>
      </div>
      
    </div>

    <div class="am-g">
      <div class="am-u-sm-12">
        <form class="am-form">
          <table class="am-table am-table-striped am-table-hover table-main">
            <thead>
              <tr>
                <!-- <th class="table-check"><input type="checkbox" /></th> -->
                <th v-for="item in tableConfig.columns" v-cloak>{{ item.title }}
                </th>
              </tr>
          </thead>
          <tbody>
            <tr v-for="(item,index) in tableConfig.tableData" v-cloak>
              <!-- <td><input type="checkbox" /></td> -->
              <td>{{ item.name }}</td>
              <td>{{ item.gender ? '男' : '女' }}</td>
              <td>{{ item.type == 1 ? '学生' : item.type == 2 ? '教师' : '管理员' }}</td>
              <td>{{ item.department }}</td>
              <td>{{ item.major }}</td>
              <td>{{ item.tel }}</td>
              <td>{{ item.email }}</td>
              <td>
                <div class="am-btn-toolbar">
                  <div class="am-btn-group am-btn-group-xs">
                    <a class="am-btn am-btn-default am-btn-xs am-text-secondary" v-bind:index="index" v-on:click="edit"><span v-bind:index="index" class="am-icon-pencil-square-o"></span> 编辑</a>

                    <a class="am-btn am-btn-default am-btn-xs am-text-danger" v-bind:index="index" v-on:click="del"><span v-bind:index="index" class="am-icon-trash-o"></span> 删除</a>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
          <div class="am-cf">
  <!-- 共 15 条记录 -->
