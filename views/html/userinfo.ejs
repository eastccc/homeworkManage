<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <title>用户资料</title>
  <link rel="stylesheet" href="../public/css/amazeui.min.css"/>
  <link rel="stylesheet" href="../public/css/admin.css">
</head>
<body>
<%- include("../header.ejs") %>
<div class="am-cf admin-main" id="app">
  <!-- sidebar start -->
  <%- include("../left.ejs") %>
  <!-- sidebar end -->

  <!-- content start -->
  <div class="admin-content">
    <div class="am-cf am-padding">
      <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">用户资料</strong></div>
    </div>

    <hr/>

    <div class="am-g">

      <div class="am-u-sm-12 am-u-md-4 am-u-md-push-8"></div>

      <div class="am-u-sm-12 am-u-md-8 am-u-md-pull-4">
        <form class="am-form am-form-horizontal">
          <div class="am-form-group">
            <label for="user-name" class="am-u-sm-3 am-form-label">姓名</label>
            <div class="am-u-sm-9">
              <input type="text" v-model="inputtext.name" readonly>
            </div>
          </div>

          <div class="am-form-group">
            <label for="user-email" class="am-u-sm-3 am-form-label">性别</label>
            <div class="am-u-sm-9">
              <input type="text" readonly v-model="inputtext.gender ? '男':'女' ">
            </div>
          </div>

          <div class="am-form-group" v-if="type==1">
            <label for="user-email" class="am-u-sm-3 am-form-label">专业</label>
            <div class="am-u-sm-9">
              <input type="text" v-model="inputtext.department" readonly>
            </div>
          </div>

          <div class="am-form-group" v-if="type==2">
            <label for="user-email" class="am-u-sm-3 am-form-label">学科</label>
            <div class="am-u-sm-9">
              <input type="text" v-model="inputtext.major" readonly>
            </div>
          </div>

          <div class="am-form-group">
            <label for="user-email" class="am-u-sm-3 am-form-label">电子邮件</label>
            <div class="am-u-sm-9">
              <input type="email" v-model="inputtext.email" placeholder="请输入电子邮件">
            </div>
          </div>

          <div class="am-form-group">
            <label for="user-phone" class="am-u-sm-3 am-form-label">电话</label>
            <div class="am-u-sm-9">
              <input type="text" v-model="inputtext.tel" placeholder="请输入电话号码">
            </div>
          </div>

          <div class="am-form-group">
            <div class="am-u-sm-9 am-u-sm-push-3">
              <button type="button" class="am-btn am-btn-primary" v-on:click="save">保存</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- content end -->

</div>
<%- include("../footer.ejs") %>
<script src="../public/js/html/userinfo.js"></script>
</body>
</html>
