<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <title>作业列表</title>
  <link rel="stylesheet" href="../public/css/amazeui.min.css"/>
  <link rel="stylesheet" href="../public/css/admin.css">
</head>
<body>
<%- include("../header.ejs") %>
<div class="am-cf admin-main" id="app">
  <!-- sidebar start -->
  <%- include("../left.ejs") %>
  <!-- sidebar end -->

  <!-- content start -->
  <div class="admin-content">

    <div class="am-cf am-padding">
      <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">作业列表</strong></div>
    </div>

    <div class="am-g">
      <div class="am-u-md-3 am-cf">
 
      </div>
      <div class="am-u-md-6 am-cf">
        <div class="am-fr am-cf">
          <div class="am-btn-toolbar am-fr">
            <div class="am-btn-group am-btn-group-xs">
              <button type="button" class="am-btn am-btn-default am-fr" v-on:click="add" v-if="type == 2"><span class="am-icon-plus"></span> 新增</button>
            </div>
          </div>
        </div>
      </div>
      
    </div>

    <div class="am-g">
      <div class="am-u-sm-12">
        <form class="am-form">
          <table class="am-table am-table-striped am-table-hover table-main">
            <thead>
              <tr>
                <!-- <th class="table-check"><input type="checkbox" /></th> -->
                <th v-for="item in columns">{{item.title}}</th>
              </tr>
          </thead>
          <tbody>
            <tr v-for="item in tableData">
              <!-- <td><input type="checkbox" /></td> -->
              <td><a href="#">{{item.title}}</a></td>
              <td>{{item.department}}</td>
              <td>{{item.major}}</td>
              <td>{{item.from}}</td>
              <td>{{item.start}}</td>
              <td>{{item.end}}</td>
              <td>
                <div class="am-btn-toolbar">
                  <div class="am-btn-group am-btn-group-xs">
                    <button class="am-btn am-btn-default am-btn-xs am-text-secondary" v-bind:uid="item.id" v-on:click="edit" v-if="type == 2"><span v-bind:uid="item.id" class="am-icon-pencil-square-o"></span> 编辑</button>
                    <button class="am-btn am-btn-default am-btn-xs am-text-primary" v-bind:uid="item.id" v-on:click="view"><span v-bind:uid="item.id" class="am-icon-pencil-square-o"></span> {{type == 2 ? '查看进度' : '查看'}}</button>
                    <button class="am-btn am-btn-default am-btn-xs am-text-danger" v-bind:uid="item.id" v-on:click="del" v-if="type == 2"><span v-bind:uid="item.id" class="am-icon-trash-o"></span> 删除</button>
                    
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
